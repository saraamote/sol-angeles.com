<div class="account-content">
<div id="customer-login">
  <div class="row">
    <div id="login" class="columns large-7">
      <h1 class="page-title">{{ 'customer.login.page_title' | t }}</h1>
      {% include 'snippet-breadcrumbs' %}

      {% form 'customer_login' %}
      {{ form.errors | default_errors }}

      <label for="customer_email" class="label">{{ 'customer.login.email' | t }}</label>
      <input type="email" value="" name="customer[email]" id="customer_email" class="text" />

      {% if form.password_needed %}
      <label for="customer_password" class="label">{{ 'customer.login.password' | t }}</label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="text" size="16" />
      <p><a href="#" onclick="showRecoverPasswordForm();return false;">{{ 'customer.login.forgot_password' | t }}</a></p>
      {% endif %}

      <div class="action_bottom">
        <input class="button" type="submit" value="{{ 'customer.login.sign_in' | t }}" />
        <span class="note"> <a style="margin-left: 15px;" href="{{ shop.url }}/account/register">{{ 'customer.login.new_account' | t }}</a></span>
      </div>
      {% endform %}
    </div>

    <div id="recover-password" style="display:none;" class="columns large-7">
      <h1 class="page-title">{{ 'customer.login.reset_password' | t }}</h1>
      {% include 'snippet-breadcrumbs' %}
      <p class="note">{{ 'customer.login.reset_instructions' | t }}</p>

      {% form 'recover_customer_password' %}
      {{ form.errors | default_errors }}

      <label for="email" class="label">{{ 'customer.login.email' | t }}</label>
      <input type="email" value="" size="30" name="email" id="recover-email" class="text" />

      <input class="button" type="submit" value="{{ 'customer.login.submit' | t }}" />
      <span class="note"> <a style="margin-left: 15px;" href="#" onclick="hideRecoverPasswordForm();return false;">{{ 'customer.login.cancel' | t }}</a></span>
      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
    <div id="guest" class="columns large-7">
      <h1 class="page-title">{{ 'customer.login.guest_title' | t }}</h1>
      {% form 'guest_login' %}
      <input class="button" type="submit" value="{{ 'customer.login.guest_continue' | t }}" />
      {% endform %}
    </div>
    {% endif %}

  </div>
</div>
</div>

<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'block';
    document.getElementById('login').style.display='none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('login').style.display = 'block';
  }

  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>
